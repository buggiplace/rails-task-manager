<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>


<%= link_to "Edit this Task", task_edit_path(@task) %>
<%= link_to "Go back to overview", tasks_path  %>
<%= link_to "Delete this Task", task_path(@task), method: :delete,
data: {confirm: 'Are you sure you want to delete this task?'}  %>
